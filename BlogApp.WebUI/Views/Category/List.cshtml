@model IEnumerable<Category>
@{
    ViewData["Title"] = "Category List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container mt-3">
    <h2>Category List</h2>
    <div class="row">
        <div class="col">
            @if (Model.Count()>0)
            {
                <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th></th>
                    </tr>
                    
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CategoryId</td>
                            <td>@item.Name</td>
                            <td>
                                <a class="btn btn-primary btn-sm" asp-action="AddOrUpdate" asp-controller="Category" asp-route-id="@item.CategoryId">Details</a>
                                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="Category" asp-route-id="@item.CategoryId">Delete</a>
                            
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            }
            else
            {
                <div class="alert alert-danger">
                    Kategori Eklenmemi≈ü.
                </div>
            }
        </div>
    </div>
</div>