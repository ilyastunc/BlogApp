@model IEnumerable<Blog>
@{
    ViewData["Title"] = "Blog List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container mt-3">
    <h2>Blog List</h2>
    <hr>
    <div>
        <a class="btn btn-primary mb-2" href="/Blog/Create">Create</a>
    </div>
    <div class="row">
        <div class="col">
            @if (Model.Count()>0)
            {
                <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Image</th>
                        <th>Title</th>
                        <th>Date</th>
                        <th>Is Approved</th>
                        <th>Is Home</th>
                        <th>Is Slider</th>
                        <th></th>
                    </tr>
                    
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.BlogId</td>
                            <td><img src="~/img/@item.Image" width="100"></td>
                            <td>@item.Title</td>
                            <td>@item.Date</td>
                            <td>@if(item.IsApproved)
                                {
                                    <i class="fa fa-check"></i>
                                }
                                else
                                {
                                    <i class="fa fa-times"></i>
                                }
                            </td>
                            <td>@if(item.IsHome)
                                {
                                    <i class="fa fa-check"></i>
                                }
                                else
                                {
                                    <i class="fa fa-times"></i>
                                }
                            </td>
                            <td>@if(item.IsSlider)
                                {
                                    <i class="fa fa-check"></i>
                                }
                                else
                                {
                                    <i class="fa fa-times"></i>
                                }
                            </td>
                            <td>
                                <a class="btn btn-primary btn-sm" asp-action="Edit" asp-controller="Blog" asp-route-id="@item.BlogId">Edit</a>
                                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="Blog" asp-route-id="@item.BlogId">Delete</a>
                            
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            }
            else
            {
                <div class="alert alert-danger">
                    Blog Eklenmemi≈ü.
                </div>
            }
        </div>
    </div>
</div>