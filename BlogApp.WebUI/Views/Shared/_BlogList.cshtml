@model IEnumerable<Blog>

@if (Model.Count()>0)
{
    @foreach (var item in Model)
    {
        <div class="card mb-2">
            <div class="card-header">
                @item.Title
            </div>
            <img src="~/img/@item.Image" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">@item.Title</h5>
                <p class="card-text">@item.Description</p>
                <a asp-action="Details" asp-controller="Blog" asp-route-id="@item.BlogId" class="btn btn-primary">Blog Details</a>
            </div>
        </div>   
    }
}
else
{
    <div class="alert alert-warning">KayÄ±t yok</div>
}