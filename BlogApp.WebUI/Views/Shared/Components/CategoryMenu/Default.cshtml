@model IEnumerable<Category>

<div class="list-group">
   @foreach (var item in Model)
   {
        <a 
            asp-action="Index"
            asp-controller="Blog"
            asp-route-id="@item.CategoryId"
            class='list-group-item @(ViewBag.SelectedCategory==@item.CategoryId.ToString()?"active":"") '>
                @item.Name
        </a>
   }
</div>